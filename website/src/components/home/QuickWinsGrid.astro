---
const wins = [
  {
    title: 'Upload images into a gallery',
    description: 'Point it at a folder. It uploads everything and builds the gallery section. Done.',
    iconClass: 'ph-duotone ph-upload-simple',
    command: '$ bricks media upload ./photos/*.jpg',
  },
  {
    title: 'Generate a landing page',
    description: 'One sentence in, full page out. Hero, features, testimonials, CTA. All using your ACSS classes.',
    iconClass: 'ph-duotone ph-magic-wand',
    command: '$ bricks generate page "SaaS landing page"',
  },
  {
    title: 'Convert HTML to Bricks',
    description: 'Write HTML with your classes. The CLI turns it into Bricks elements and maps class names to IDs.',
    iconClass: 'ph-duotone ph-brackets-angle',
    command: '$ bricks convert ./template.html --push',
  },
  {
    title: 'Search and replace across pages',
    description: 'Find every button, heading, or class usage site-wide. Change them all in one pass.',
    iconClass: 'ph-duotone ph-magnifying-glass-plus',
    command: '$ bricks search "old" | bricks modify',
  },
  {
    title: 'Roll back any change',
    description: 'Every push saves a snapshot. Something wrong? One command to undo it.',
    iconClass: 'ph-duotone ph-clock-counter-clockwise',
    command: '$ bricks snapshot restore --page 1460',
  },
  {
    title: 'Apply a style profile',
    description: 'Define your brand fonts, colors, and spacing once. Every generated section follows your rules automatically.',
    iconClass: 'ph-duotone ph-paint-brush',
    command: '$ bricks style apply --profile brand.json',
  },
];
---

<section class="py-24 px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-5xl">
    <div class="text-center mb-12 relative z-20">
      <h2 class="text-3xl sm:text-4xl font-bold text-ui-fg drop-shadow-sm">What you can do</h2>
      <p class="mt-4 text-ui-muted text-lg">
        Things you can do on day one.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 relative z-20 stagger-children">
      {wins.map((win) => (
        <div class="glass-base tilt-card relative overflow-hidden p-7 border border-subtle transition-all hover:border-accent-yellow hover:-translate-y-1 group group-hover:shadow-[var(--shadow-glow)]">
          <div class="noise"></div>
          <div class="w-11 h-11 rounded-lg bg-accent-yellow/5 border border-accent-yellow/10 flex items-center justify-center mb-5 relative z-10 group-hover:border-accent-yellow/30 group-hover:bg-accent-yellow/20 transition-colors">
             <i class={`${win.iconClass} text-[22px] text-accent-yellow transition-colors`}></i>
          </div>
          <h3 class="text-ui-fg font-mono font-bold uppercase tracking-[0.05em] text-[12px] mb-3 relative z-10 group-hover:text-accent-yellow transition-colors">{win.title}</h3>
          <p class="text-ui-muted text-sm leading-relaxed relative z-10">{win.description}</p>
          <div class="mt-3 font-mono text-[10px] text-accent-yellow/70 truncate relative z-10">{win.command}</div>
        </div>
      ))}
    </div>
  </div>
</section>
