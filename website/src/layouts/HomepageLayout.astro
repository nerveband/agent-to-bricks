---
import Header from '../components/home/Header.astro';
import Footer from '../components/home/Footer.astro';
import '../styles/fonts.css';
import '../styles/global.css';
import '../styles/custom.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Agent to Bricks — Update your Bricks website with natural language',
  description = 'Bring your own AI agent, your own workflows, from your machine to the cloud. Free and open source.',
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark" style="color-scheme: dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0a0a0c" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#eef2ff" media="(prefers-color-scheme: light)" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://agenttobricks.com" />
    <meta property="og:image" content="/images/og-card.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/og-card.png" />

    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Preconnect to external CDN origins -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin />
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
    <link rel="dns-prefetch" href="https://stats.wavedepth.com" />

    <!-- Preload critical font files (same-origin, no DNS/TLS overhead) -->
    <link rel="preload" href="/fonts/plus-jakarta-sans-latin.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/space-grotesk-latin.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Phosphor Icons — only regular + duotone weights (not all 6) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/regular/style.css" media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/duotone/style.css" media="print" onload="this.media='all'" />
    <noscript>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/regular/style.css" />
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/duotone/style.css" />
    </noscript>

    <!-- GSAP for Animations — deferred -->
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

    <!-- Analytics -->
    <script defer src="https://stats.wavedepth.com/script.js" data-website-id="eb9e052e-1189-425b-b59d-211ee0bb3885"></script>
    <title>{title}</title>
  </head>
  <body class="min-h-screen text-[var(--fg)] font-sans antialiased overflow-x-hidden !bg-none transition-colors duration-400">
    <div class="noise-overlay"></div>
    <!-- Animated gradient background -->
    <div class="fixed inset-0 -z-10 bg-[linear-gradient(-45deg,var(--bg-grad-1),var(--bg-grad-2),var(--bg-grad-3),var(--bg-grad-4))] bg-[length:400%_400%] animate-[gradientBG_45s_ease_infinite] transition-colors duration-400"></div>

    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:bg-yellow-400 focus:text-gray-900 focus:px-4 focus:py-2 focus:rounded-lg focus:font-semibold">
      Skip to main content
    </a>

    <Header />

    <main id="main-content" class="relative z-10 w-full max-w-[100vw] overflow-x-hidden flex flex-col items-center">
      <slot />
    </main>

    <Footer />

    <script is:inline>
      // Dark/light mode toggle persistence (runs immediately)
      const theme = localStorage.getItem('theme') || 'dark';
      document.documentElement.setAttribute('data-theme', theme);
      document.documentElement.style.colorScheme = theme;

      // Initialize GSAP once loaded (deferred scripts)
      function initGSAP() {
        if (typeof gsap === 'undefined' || typeof ScrollTrigger === 'undefined') {
          // Retry briefly if deferred scripts haven't loaded yet
          setTimeout(initGSAP, 50);
          return;
        }

        // Honor reduced motion preference
        if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
          // Skip all GSAP animations — make elements visible immediately
          document.querySelectorAll('.reveal').forEach(function(el) { el.classList.add('active'); });
          document.querySelectorAll('.stagger-children').forEach(function(el) { el.classList.add('active'); });
          document.querySelectorAll('.hero-headline .word, .hero-subhead, .hero-cta, .hero-mockup').forEach(function(el) {
            el.style.opacity = '1';
            el.style.transform = 'none';
          });
          return;
        }

        gsap.registerPlugin(ScrollTrigger);

        // Reveal all .reveal elements on scroll
        gsap.utils.toArray('.reveal').forEach(function(el) {
          ScrollTrigger.create({
            trigger: el,
            start: 'top 85%',
            onEnter: function() { el.classList.add('active'); },
            once: true,
          });
        });

        // Stagger children
        gsap.utils.toArray('.stagger-children').forEach(function(el) {
          ScrollTrigger.create({
            trigger: el,
            start: 'top 85%',
            onEnter: function() { el.classList.add('active'); },
            once: true,
          });
        });

        // Hero entrance animation
        var heroHeadline = document.querySelector('.hero-headline');
        if (heroHeadline) {
          var words = heroHeadline.querySelectorAll('.word');
          var tl = gsap.timeline({ defaults: { ease: 'power4.out' } });

          gsap.set(words, { opacity: 0, y: 60 });
          gsap.set('.hero-subhead', { opacity: 0, y: 30 });
          gsap.set('.hero-cta', { opacity: 0, y: 20 });
          gsap.set('.hero-mockup', { opacity: 0, y: 60 });

          tl.to(words, {
            duration: 0.8,
            opacity: 1,
            y: 0,
            stagger: 0.08,
          })
          .to('.hero-subhead', {
            duration: 0.8,
            opacity: 1,
            y: 0,
          }, '-=0.4')
          .to('.hero-cta', {
            duration: 0.6,
            opacity: 1,
            y: 0,
            stagger: 0.1,
          }, '-=0.4')
          .to('.hero-mockup', {
            duration: 1,
            opacity: 1,
            y: 0,
            ease: 'power3.out',
          }, '-=0.6');
        }
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initGSAP);
      } else {
        initGSAP();
      }
    </script>

    <style is:global>
      @keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      /* Tailwind font family overrides based on new google fonts */
      html, body {
        font-family: 'Plus Jakarta Sans', sans-serif;
      }
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Space Grotesk', sans-serif;
      }
      .font-mono {
        font-family: 'JetBrains Mono', monospace;
      }
      
      /* Base colors injected into utility classes directly using CSS variables for dynamic switching */
      .text-ui-fg { color: var(--fg); }
      .text-ui-muted { color: var(--fg-muted); }
      .text-ui-subtle { color: var(--fg-subtle); }
      .text-accent-yellow { color: var(--yellow); }
      .text-accent-green { color: var(--green); }
      .bg-accent-yellow { background-color: var(--yellow); }

      /* Noise Texture injected onto elements with .noise */
      .noise {
          position: absolute;
          inset: 0;
          pointer-events: none;
          z-index: 50;
          opacity: 0.15;
          mix-blend-mode: overlay;
          background-image: url('~/assets/grain.svg');
          transition: opacity 0.5s ease;
      }
      .glass-base:hover .noise { opacity: 0.25; }

      /* Site-wide fixed noise overlay */
      .noise-overlay {
          position: fixed;
          inset: 0;
          pointer-events: none;
          z-index: 100;
          opacity: 0.08;
          mix-blend-mode: overlay;
          background-image: url('~/assets/grain.svg');
      }

      [data-theme='light'] .noise {
          opacity: 0.2;
          mix-blend-mode: multiply;
      }
      [data-theme='light'] .glass-base:hover .noise { opacity: 0.3; }
      
      [data-theme='light'] .noise-overlay {
          opacity: 0.12;
          mix-blend-mode: multiply;
      }

      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }
    </style>
  </body>
</html>
