---
import Header from '../components/home/Header.astro';
import Footer from '../components/home/Footer.astro';
import '../styles/global.css';
import '../styles/custom.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Agent to Bricks â€” Update your Bricks website with natural language',
  description = 'Bring your own AI agent, your own workflows, from your machine to the cloud. Free and open source.',
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://agentstobricks.com" />
    <meta property="og:image" content="/images/og-card.png" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/og-card.png" />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>

    <!-- GSAP for Animations -->
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <title>{title}</title>
  </head>
  <body class="min-h-screen text-[var(--fg)] font-sans antialiased overflow-x-hidden !bg-none transition-colors duration-400">
    <div class="noise-overlay"></div>
    <!-- Animated gradient background -->
    <div class="fixed inset-0 -z-10 bg-[linear-gradient(-45deg,var(--bg-grad-1),var(--bg-grad-2),var(--bg-grad-3),var(--bg-grad-4))] bg-[length:400%_400%] animate-[gradientBG_45s_ease_infinite] transition-colors duration-400"></div>

    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:bg-yellow-400 focus:text-gray-900 focus:px-4 focus:py-2 focus:rounded-lg focus:font-semibold">
      Skip to main content
    </a>

    <Header />

    <main id="main-content" class="relative z-10 w-full max-w-[100vw] overflow-x-hidden flex flex-col items-center">
      <slot />
    </main>

    <Footer />

    <script is:inline>
      // Dark/light mode toggle persistence
      const theme = localStorage.getItem('theme') || 'dark';
      document.documentElement.setAttribute('data-theme', theme);

      document.addEventListener('DOMContentLoaded', () => {
        if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
          gsap.registerPlugin(ScrollTrigger);

          // Reveal all .reveal elements on scroll
          gsap.utils.toArray('.reveal').forEach(el => {
            ScrollTrigger.create({
              trigger: el,
              start: 'top 85%',
              onEnter: () => el.classList.add('active'),
              once: true,
            });
          });

          // Stagger children
          gsap.utils.toArray('.stagger-children').forEach(el => {
            ScrollTrigger.create({
              trigger: el,
              start: 'top 85%',
              onEnter: () => el.classList.add('active'),
              once: true,
            });
          });

          // Hero entrance animation
          const heroHeadline = document.querySelector('.hero-headline');
          if (heroHeadline) {
            const words = heroHeadline.querySelectorAll('.word');
            const tl = gsap.timeline({ defaults: { ease: 'power4.out' } });

            gsap.set(words, { opacity: 0, y: 60 });
            gsap.set('.hero-subhead', { opacity: 0, y: 30 });
            gsap.set('.hero-cta', { opacity: 0, y: 20 });
            gsap.set('.hero-mockup', { opacity: 0, y: 60 });

            tl.to(words, {
              duration: 0.8,
              opacity: 1,
              y: 0,
              stagger: 0.08,
            })
            .to('.hero-subhead', {
              duration: 0.8,
              opacity: 1,
              y: 0,
            }, '-=0.4')
            .to('.hero-cta', {
              duration: 0.6,
              opacity: 1,
              y: 0,
              stagger: 0.1,
            }, '-=0.4')
            .to('.hero-mockup', {
              duration: 1,
              opacity: 1,
              y: 0,
              ease: 'power3.out',
            }, '-=0.6');
          }
        }
      });
    </script>

    <style is:global>
      @keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      /* Tailwind font family overrides based on new google fonts */
      html, body {
        font-family: 'Plus Jakarta Sans', sans-serif;
      }
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Space Grotesk', sans-serif;
      }
      .font-mono {
        font-family: 'JetBrains Mono', monospace;
      }
      
      /* Base colors injected into utility classes directly using CSS variables for dynamic switching */
      .text-ui-fg { color: var(--fg); }
      .text-ui-muted { color: var(--fg-muted); }
      .text-ui-subtle { color: var(--fg-subtle); }
      .text-accent-yellow { color: var(--yellow); }
      .text-accent-green { color: var(--green); }
      .bg-accent-yellow { background-color: var(--yellow); }

      /* Noise Texture injected onto elements with .noise */
      .noise {
          position: absolute;
          inset: 0;
          pointer-events: none;
          z-index: 50;
          opacity: 0.15;
          mix-blend-mode: overlay;
          background-image: url('~/assets/grain.svg');
          transition: opacity 0.5s ease;
      }
      .glass-base:hover .noise { opacity: 0.25; }

      /* Site-wide fixed noise overlay */
      .noise-overlay {
          position: fixed;
          inset: 0;
          pointer-events: none;
          z-index: 100;
          opacity: 0.08;
          mix-blend-mode: overlay;
          background-image: url('~/assets/grain.svg');
      }

      [data-theme='light'] .noise {
          opacity: 0.2;
          mix-blend-mode: multiply;
      }
      [data-theme='light'] .glass-base:hover .noise { opacity: 0.3; }
      
      [data-theme='light'] .noise-overlay {
          opacity: 0.12;
          mix-blend-mode: multiply;
      }

      @media (prefers-reduced-motion: reduce) {
        .animate-[gradientBG_45s_ease_infinite] {
          animation: none;
        }
      }
    </style>
  </body>
</html>
